<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         verbose="true">
       
  <testsuites>
    <testsuite name="mava">
      <directory suffix="Test.php">${basedir}/../tests/</directory>
    </testsuite>
  </testsuites>

  <logging>
    <log type="coverage-html" target="${basedir}/coverage"/>
    <log type="coverage-clover" target="${basedir}/logs/clover.xml"/>
    <log type="coverage-crap4j" target="${basedir}/logs/crap4j.xml"/>
    <log type="junit" target="${basedir}/logs/junit.xml" logIncompleteSkipped="false"/>
  </logging>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">${basedir}/src</directory>
      <exclude>
        <file>${basedir}/src/bootstrap.php</file>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
