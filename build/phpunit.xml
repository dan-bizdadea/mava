<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="${basedir}../app/autoload.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         colors="true"
         verbose="true">
       
  <testsuites>
    <testsuite name="mava">
      <directory>${basedir}/../tests/</directory>
    </testsuite>
  </testsuites>

  <php>
    <server name="KERNEL_DIR" value="${basedir}/../app/" />
  </php

  <logging>
    <log type="coverage-html" target="${basedir}/coverage"/>
    <log type="coverage-clover" target="${basedir}/logs/clover.xml"/>
    <log type="coverage-crap4j" target="${basedir}/logs/crap4j.xml"/>
    <log type="junit" target="${basedir}/logs/junit.xml" logIncompleteSkipped="false"/>
  </logging>

  <filter>
    <whitelist>
      <directory>src</directory>
      <exclude>
        <directory>src/*Bundle/Resources</directory>
        <directory>src/*/*Bundle/Resources</directory>
        <directory>src/*/Bundle/*Bundle/Resources</directory>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
